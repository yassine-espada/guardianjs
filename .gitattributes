# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf

# Documentation
*.txt text eol=lf
LICENSE text eol=lf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
tsconfig.json text eol=lf

# Scripts
*.sh text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary

# Exclude files from exports
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
node_modules export-ignore

